extends layout

block append head
    //- TODO: Change to minified leaflet.js
    link(rel="stylesheet" href="/vendor/leaflet/leaflet.css")
    script(src="/vendor/leaflet/leaflet-src.js")
    script(src="/vendor/leaflet-providers/leaflet-providers.js")

block content
    include search
    div(id='error')
    div(class='map' id='map')
    script(src="/javascripts/map.js")
    <script>initMap(); moveMapTo(#{latitude || 0}, #{longitude || 0});</script>
